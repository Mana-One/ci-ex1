pipeline {
    agent {
        docker {
            image "node:17-alpine3.12"
        }
    }
    stages {
        stage("Build") {
            steps {
                nodejs(nodeJSInstallationName: 'Node 17.x', configId: '<config-file-provider-id>') {
                    sh 'npm ci'
                }
            }
        }
        stage("Test") {
            steps {
                nodejs(nodeJSInstallationName: 'Node 17.x', configId: '<config-file-provider-id>') {
                    sh 'npm test'
                }
            }
        }
    }
}